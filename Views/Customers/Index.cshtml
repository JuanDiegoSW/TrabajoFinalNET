@model IEnumerable<Restaurant.Models.Customers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Clientes</h2>

<p>
    @Html.ActionLink("Nuevo Cliente", "Create",null,new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            <label class="control-label col-md-2">Nombre</label>
        </th>
        <th>
            <label class="control-label col-md-2">Apellidos</label>
        </th>
        <th>
            <label class="control-label col-md-2">DNI</label>
        </th>
        <th>
            <label class="control-label col-md-2">Celular</label>
        </th>
        <th>
            <label class="control-label col-md-2">Email</label>
        </th>
        <th><label class="control-label col-md-2">Opciones</label></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerLastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerDNI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerMovil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerEmail)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CustomerId },new {@class ="btn btn-success"})
            @Html.ActionLink("Delete", "Delete", new { id=item.CustomerId },new { @class = "btn btn-danger"})
        </td>
    </tr>
}

</table>
